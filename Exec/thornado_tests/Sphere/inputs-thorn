stop_time =  5.e-3

# PROBLEM SIZE & GEOMETRY
geometry.is_periodic = 0 0 0
geometry.coord_sys   = 0  # 0 => cart, 1 => RZ  2=>spherical
geometry.prob_lo     =  -1.e7     -1.e7     -1.e7
geometry.prob_hi     = 1.e7    1.e7    1.e7 # 100km
#amr.n_cell           = 256     256      256
amr.n_cell           = 16 16 16
#########amr.n_cell           = 16 16 16

